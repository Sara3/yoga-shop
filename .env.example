# Copy to .env and fill in. Use test keys for dev; switch to live for real money.

# Required: seller wallet (Base Sepolia testnet or Base mainnet)
SELLER_WALLET=0x0000000000000000000000000000000000000000

# Required for Stripe: sk_test_... (test) or sk_live_... (live)
STRIPE_SECRET_KEY=sk_test_...

# Optional: production base URL (success/cancel redirects, paywall)
# BASE_URL=https://yoga-api.onrender.com

# Optional: x402 network — base-sepolia (testnet) or base (mainnet, real USDC)
# X402_NETWORK=base-sepolia

# Optional: x402 demo mode — set to "true" to allow "demo" token for automated testing (bypasses payment verification)
# X402_DEMO_MODE=false

# Optional: Stripe webhook (set in Dashboard → Webhooks; use raw body, verify signature)
# STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: CORS origin (* or comma-separated). Default *
# CORS_ORIGIN=*

# Optional: rate limit (max requests per window). Default 100/60s. 0 = off
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=60000

# Optional: class video URLs (override defaults)
# CLASS_1_PREVIEW_URL=...
# CLASS_1_FULL_URL=...
# CLASS_2_PREVIEW_URL=...
# CLASS_2_FULL_URL=...
# CLASS_3_PREVIEW_URL=...
# CLASS_3_FULL_URL=...

PORT=3000

# MCP HTTP server (when API is elsewhere)
# API_BASE_URL=http://localhost:3000
