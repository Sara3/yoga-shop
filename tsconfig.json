{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "x402-express": ["./node_modules/x402-express/dist/cjs/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
